<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.prateek.halodocapp.ui.home.HomeActivity">

    <TextView
        android:id="@+id/home_txt_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/home_btn_search"
        android:foreground="@android:color/tertiary_text_light"
        android:gravity="center_vertical"
        android:text="@string/txt_serach" />

    <Button
        android:id="@id/home_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:text="@string/btn_search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_btn_search">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
